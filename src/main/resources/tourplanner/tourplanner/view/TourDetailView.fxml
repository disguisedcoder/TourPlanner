<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tourplanner.tourplanner.view.TourDetailController">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <GridPane layoutX="0" layoutY="0" hgap="10" vgap="8">
        <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" editable="false" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="descriptionField" editable="false" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="From:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="fromField" editable="false" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="To:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="toField" editable="false" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Transport:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="transportField" editable="false" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Distance:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="distField" editable="false" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Est. Time:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <TextField fx:id="timeField" editable="false" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
    </GridPane>

    <StackPane layoutX="350" layoutY="0" prefWidth="300" prefHeight="180">
        <ImageView fx:id="mapView" fitWidth="300" fitHeight="180" preserveRatio="true"/>
        <Label fx:id="noImageLabel" text="No images found" alignment="CENTER" visible="false"/>
    </StackPane>

</AnchorPane>
