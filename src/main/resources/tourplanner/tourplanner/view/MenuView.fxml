<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>

<MenuBar xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         fx:controller="tourplanner.tourplanner.view.MenuController">

    <menus>
        <!-- FILE-Men端 -->
        <Menu text="File">
            <MenuItem text="New Tour"    onAction="#onNewTour"/>
            <MenuItem text="Edit Tour"   onAction="#onEditTour"/>
            <MenuItem text="Delete Tour" onAction="#onDeleteTour"/>
            <SeparatorMenuItem/>
            <MenuItem text="Exit"        onAction="#onExit"/>
        </Menu>

        <!-- EDIT-Men端 -->
        <Menu text="Edit">
            <MenuItem text="Find Tour"   onAction="#onFindTour"/>
            <MenuItem text="Reload Tours" onAction="#onReloadTours"/>
        </Menu>

        <!-- OPTIONS-Men端 -->
        <Menu text="Options">
            <MenuItem text="Settings"    onAction="#onSettings"/>
        </Menu>

        <!-- HELP-Men端 -->
        <Menu text="Help">
            <MenuItem text="About"       onAction="#onAbout"/>
        </Menu>
    </menus>
</MenuBar>
